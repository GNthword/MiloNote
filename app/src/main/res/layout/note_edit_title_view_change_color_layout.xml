<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingTop="2dp"
        android:paddingBottom="2dp"
        >

        <LinearLayout
            android:id="@+id/ll_yellow"
            android:layout_width="@dimen/edit_view_title_pick_color_item_width"
            android:layout_height="@dimen/edit_view_title_pick_color_item_height"
            android:orientation="horizontal"
            android:layout_marginLeft="@dimen/edit_view_title_pick_color_item_margin_left"
            android:layout_marginRight="@dimen/edit_view_title_pick_color_item_margin_right"
            android:background="@drawable/edit_view_change_color_picker_yellow"
            >
            </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_blue"
            android:layout_width="@dimen/edit_view_title_pick_color_item_width"
            android:layout_height="@dimen/edit_view_title_pick_color_item_height"
            android:orientation="horizontal"
            android:layout_marginLeft="@dimen/edit_view_title_pick_color_item_margin_left"
            android:layout_marginRight="@dimen/edit_view_title_pick_color_item_margin_right"
            android:background="@drawable/edit_view_change_color_picker_blue"
            >
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_white"
            android:layout_width="@dimen/edit_view_title_pick_color_item_width"
            android:layout_height="@dimen/edit_view_title_pick_color_item_height"
            android:orientation="horizontal"
            android:layout_marginLeft="@dimen/edit_view_title_pick_color_item_margin_left"
            android:layout_marginRight="@dimen/edit_view_title_pick_color_item_margin_right"
            android:background="@drawable/edit_view_change_color_picker_white"
            >
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_green"
            android:layout_width="@dimen/edit_view_title_pick_color_item_width"
            android:layout_height="@dimen/edit_view_title_pick_color_item_height"
            android:orientation="horizontal"
            android:layout_marginLeft="@dimen/edit_view_title_pick_color_item_margin_left"
            android:layout_marginRight="@dimen/edit_view_title_pick_color_item_margin_right"
            android:background="@drawable/edit_view_change_color_picker_green"
            >
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_red"
            android:layout_width="@dimen/edit_view_title_pick_color_item_width"
            android:layout_height="@dimen/edit_view_title_pick_color_item_height"
            android:orientation="horizontal"
            android:layout_marginLeft="@dimen/edit_view_title_pick_color_item_margin_left"
            android:layout_marginRight="@dimen/edit_view_title_pick_color_item_margin_right"
            android:background="@drawable/edit_view_change_color_picker_red"
            >
        </LinearLayout>

    </LinearLayout>

</ScrollView>