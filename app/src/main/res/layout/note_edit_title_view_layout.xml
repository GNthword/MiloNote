<?xml version="1.0" encoding="utf-8"?>
<com.miloway.milonote.view.NoteEditTitleView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/rl_title"
    android:layout_width="match_parent"
    android:layout_height="@dimen/edit_view_title_bar_height"
    android:orientation="horizontal"
    android:background="@color/note_edit_view_title_bar_bg_yellow"
    >
    <ImageView
        android:id="@+id/iv_back"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:contentDescription="@null"
        android:src="@drawable/edit_view_go_back"
        android:padding="@dimen/edit_view_title_bar_back_view_padding"
        android:background="@drawable/edit_view_title_bar_selector"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/text_font_size_small"
        android:textColor="@color/note_edit_view_title_text_color"
        tools:text="Just Now"
        android:layout_toRightOf="@+id/iv_back"
        android:layout_centerVertical="true"
        />

    <TextView
        android:id="@+id/tv_alarm_clock"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:textSize="@dimen/text_font_size_small"
        android:textColor="@color/note_edit_view_title_text_color"
        android:text="已过期"
        android:gravity="center_vertical"
        android:drawableLeft="@drawable/alarm_clock"
        android:paddingRight="@dimen/edit_view_title_bar_view_padding_right"
        android:layout_toLeftOf="@+id/iv_insert"
        android:background="@drawable/edit_view_title_bar_selector"
        />

    <ImageView
        android:id="@+id/iv_insert"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:src="@drawable/edit_view_insert"
        android:paddingLeft="@dimen/edit_view_title_bar_view_padding_left"
        android:paddingRight="@dimen/edit_view_title_bar_view_padding_right"
        android:contentDescription="@null"
        android:layout_toLeftOf="@+id/iv_change_color"
        android:background="@drawable/edit_view_title_bar_selector"
        />

    <ImageView
        android:id="@+id/iv_change_color"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:src="@drawable/edit_view_change_color"
        android:paddingLeft="@dimen/edit_view_title_bar_view_padding_left"
        android:paddingRight="@dimen/edit_view_title_bar_view_padding_right"
        android:contentDescription="@null"
        android:layout_alignParentRight="true"
        android:background="@drawable/edit_view_title_bar_selector"
        />

</com.miloway.milonote.view.NoteEditTitleView>