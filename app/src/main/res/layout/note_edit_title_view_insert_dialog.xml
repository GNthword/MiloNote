<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="@dimen/dialog_width"
    android:layout_height="wrap_content"
    android:background="@drawable/common_dialog_background"
    >

    <TextView
        android:id="@+id/tv_shot"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/insert_dialog_shot_text"
        android:textSize="@dimen/text_font_size_large"
        android:textColor="@color/black"
        android:paddingLeft="@dimen/insert_dialog_padding_left"
        android:paddingTop="@dimen/insert_dialog_padding_top"
        android:paddingBottom="@dimen/insert_dialog_padding_bottom"
        android:background="@drawable/common_dialog_one_btn_top_background"
        />

    <View
        android:id="@+id/line1"
        android:layout_width="match_parent"
        android:layout_height="@dimen/divider_line_width"
        android:background="@color/divider_line_color"
        android:layout_marginLeft="@dimen/divider_line_margin_left"
        android:layout_marginRight="@dimen/divider_line_margin_right"
        />

    <TextView
        android:id="@+id/tv_pick"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/insert_dialog_pick_text"
        android:textSize="@dimen/text_font_size_large"
        android:textColor="@color/black"
        android:paddingLeft="@dimen/insert_dialog_padding_left"
        android:paddingTop="@dimen/insert_dialog_padding_top"
        android:paddingBottom="@dimen/insert_dialog_padding_bottom"
        android:background="@drawable/common_dialog_one_btn_background"
        />


</LinearLayout>